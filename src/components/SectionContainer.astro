---
interface Props {
  class?: string
  id?: string
  variant?: 'light' | 'darker'
}

const { class: className, variant = 'light', id } = Astro.props
---

<section
  id={id}
  class="py-12 px-6 xs:px-12 md:px-0"
  class:list={[
    className,
    { 'bg-primary dark:bg-dark-primary': variant === 'light' },
    { 'bg-secondary dark:bg-dark-secondary': variant === 'darker' },
  ]}
>
  <div class="max-w-md mx-auto md:max-w-2xl lg:max-w-6xl">
    <slot />
  </div>
</section>
