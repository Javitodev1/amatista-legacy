---
import BuyButton from '@/components/BuyButton.astro'
const images = {
  bg1: '/images/pages/home/hero-bg-2.jpeg',
  bg2: '/images/pages/home/hero-bg-1.jpeg',
  bg3: '/images/pages/home/hero-bg-3.jpeg',
}

interface Texts {
  content: string
  cta: string
}

interface Props {
  texts: Texts
}

const { texts } = Astro.props
---

<section
  class="relative flex items-center justify-center w-full h-[800px] md:h-[1000px] overflow-hidden bg-black z-0"
>
  <div
    style=`background-image: url(${images.bg1});`
    class="absolute top-0 left-0 w-full h-full bg-center bg-no-repeat bg-cover fade-in-out-1 -z-10"
  >
  </div>
  <div
    style=`background-image: url(${images.bg2});`
    class="absolute top-0 left-0 w-full h-full bg-center bg-no-repeat bg-cover fade-in-out-2 -z-10"
  >
  </div>
  <div
    style=`background-image: url(${images.bg3});`
    class="absolute top-0 left-0 w-full h-full bg-center bg-no-repeat bg-cover fade-in-out-3 -z-10"
  >
  </div>
  <span class="absolute top-0 left-0 w-full h-full bg-black bg-opacity-60"
  ></span>
  <div class="relative z-0 max-w-2xl">
    <p
      class="mb-12 text-5xl font-semibold leading-snug tracking-wide text-center capitalize text-raw_white [&_strong]:text-amatista"
      set:html={texts.content}
    />
    <div class="flex justify-center">
      <BuyButton variant="WHITE">{texts.cta}</BuyButton>
    </div>
  </div>
</section>

<style>
  .fade-in-out-1 {
    animation: fade-1-3 30s ease-in-out infinite;
  }

  .fade-in-out-2 {
    animation: fade-2-3 30s ease-in-out infinite;
  }

  .fade-in-out-3 {
    animation: fade-3-3 30s ease-in-out infinite;
  }

  @keyframes fade-1-3 {
    from {
      scale: 1;
      opacity: 100%;
    }

    7% {
      opacity: 100%;
    }

    33% {
      opacity: 100%;
    }

    40% {
      opacity: 0%;
      scale: 1.2;
    }

    93% {
      opacity: 0%;
    }

    to {
      opacity: 100%;
    }
  }

  @keyframes fade-2-3 {
    from {
      opacity: 0%;
    }

    33% {
      opacity: 0%;
      scale: 1;
    }

    40% {
      opacity: 100%;
    }

    66% {
      opacity: 100%;
    }

    70% {
      opacity: 0%;
      scale: 1.2;
    }

    to {
      opacity: 0%;
    }
  }

  @keyframes fade-3-3 {
    from {
      opacity: 0%;
    }

    66% {
      opacity: 0%;
      scale: 1;
    }

    73% {
      opacity: 100%;
    }

    93% {
      opacity: 100%;
    }

    to {
      opacity: 0%;
      scale: 1.2;
    }
  }
</style>
